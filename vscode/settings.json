{
  ////////////////////////
  // General appearance //
  ////////////////////////

  "editor.fontFamily": "Natasha I",
  "editor.fontSize": 14,
  "terminal.integrated.fontSize": 14,
  "editor.tabSize": 2,
  "workbench.colorTheme": "Community Material Theme Palenight High Contrast",
  "workbench.iconTheme": "material-icon-theme",

  "workbench.sideBar.location": "left",

  "workbench.colorCustomizations": {
    "editorOverviewRuler.selectionHighlightForeground": "#00000000",
    "editorOverviewRuler.rangeHighlightForeground": "#00000000",
    "editorOverviewRuler.addedForeground": "#00aa00",
    "editorOverviewRuler.deletedForeground": "#aa0000",
    "editorOverviewRuler.modifiedForeground": "#aaaa00"
  },

  // Don't auto-reveal files in the explorer
  "explorer.autoReveal": false,

  // Disable the "file preview" feature
  // "workbench.editor.enablePreview": false,

  // Disable moving to MRU tab after closing
  "workbench.editor.focusRecentEditorAfterClose": false,

  // Use a new empty file at startup
  "workbench.startupEditor": "newUntitledFile",

  // Disable VSCode keyboard nav in lists in favor of Vim plugin's
  "workbench.list.automaticKeyboardNavigation": false,

  // Pass Option through to tmux in the integrated terminal
  "terminal.integrated.macOptionIsMeta": true,

  // Show issues in the status bar
  "problems.showCurrentInStatus": true,

  // Explorer confirmation dialogs (I think only relevant for Windows)
  "explorer.confirmDragAndDrop": false,
  "explorer.confirmDelete": false,

  // Ignore the freaking extension recommendations
  "extensions.ignoreRecommendations": true,

  /////////////////////
  // Editor behavior //
  /////////////////////

  "files.trimTrailingWhitespace": true,
  "files.insertFinalNewline": true,
  "editor.formatOnPaste": true,
  "editor.formatOnSave": true,

  // Disable the stupid lightbulb and code lens stuff
  "editor.codeLens": false,
  "editor.lightbulb.enabled": false,

  // Don't use selected string for search
  "editor.find.seedSearchStringFromSelection": false,

  ///////////////////////
  // Language-specific //
  ///////////////////////

  // Don't format my C++
  "C_Cpp.formatting": "Disabled",

  "python.showStartPage": false,
  "[python]": {
    "editor.tabSize": 4
  },

  "[rust]": {
    "editor.tabSize": 4
  },

  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.tabSize": 4
  },

  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.tabSize": 4
  },

  "[css]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.tabSize": 4
  },

  "[markdown]": {
    "editor.wordWrap": "wordWrapColumn",
    "editor.wordWrapColumn": 80
  },

  "files.associations": {
    "*.resx": "xml"
  },

  ////////////////
  // Vim plugin //
  ////////////////

  "vim.hlsearch": true,
  "vim.useSystemClipboard": true,
  "vim.visualstar": true,
  "vim.foldfix": true,
  "vim.debug.silent": true,

  "vim.handleKeys": {
    "<C-f>": false,
    "<C-b>": false
  },

  "vim.insertModeKeyBindings": [
    {
      "before": ["j", "k"],
      "after": ["<Esc>"]
    }
  ],

  "vim.normalModeKeyBindings": [
    {
      "before": ["C-o"],
      "commands": ["workbench.action.navigateBack"]
    },
    {
      "before": ["C-i"],
      "commands": ["workbench.action.navigateForward"]
    },
    {
      "before": ["J"],
      "after": ["}"]
    },
    {
      "before": ["K"],
      "after": ["{"]
    },
    {
      "before": ["k"],
      "after": ["g", "k"]
    },
    {
      "before": ["j"],
      "after": ["g", "j"]
    },
    {
      "before": ["z"],
      "after": ["$"]
    },
    {
      "before": ["Z"],
      "after": ["^"]
    },
    {
      "before": ["g", "e"],
      "commands": ["editor.action.marker.next"]
    },
    {
      "before": ["g", "E"],
      "commands": ["editor.action.marker.prev"]
    }
  ],

  "vim.visualModeKeyBindings": [
    {
      "before": ["J"],
      "after": ["}"]
    },
    {
      "before": ["K"],
      "after": ["{"]
    },
    {
      "before": ["k"],
      "after": ["g", "k"]
    },
    {
      "before": ["j"],
      "after": ["g", "j"]
    },
    {
      "before": ["z"],
      "after": ["$", "h"]
    },
    {
      "before": ["v", "z"],
      "after": ["$", "h"]
    },
    {
      "before": ["v", "Z"],
      "after": ["^"]
    },
    {
      "before": ["Z"],
      "after": ["^"]
    }
  ],

  ////////////////////
  // GitLens plugin //
  ////////////////////

  "gitlens.views.repositories.enabled": false,
  "gitlens.views.search.enabled": false,
  "gitlens.menus": {
    "editorGroup": false
  },
  "rust-analyzer.completion.addCallArgumentSnippets": false,
  "rust-analyzer.completion.postfix.enable": false,
  "rust-analyzer.inlayHints.enable": false,
  "window.zoomLevel": 0,
  "workbench.editorAssociations": [
    {
      "viewType": "jupyter.notebook.ipynb",
      "filenamePattern": "*.ipynb"
    }
  ],
  "workbench.editor.enablePreview": false,
  "editor.minimap.enabled": false,
  "jupyter.useNotebookEditor": false
}
