[
  //// *** Configuring built-in behavior *** ////

  // Use visual next tab instead of MRU
  {
    "key": "ctrl+tab",
    "command": "-workbench.action.openNextRecentlyUsedEditorInGroup"
  },
  {
    "key": "ctrl+tab",
    "command": "workbench.action.nextEditorInGroup"
  },
  {
    "key": "ctrl+shift+tab",
    "command": "workbench.action.previousEditorInGroup"
  },

  // Disable closing the VSCode window when no editors are visible
  {
    "key": "cmd+w",
    "command": "-workbench.action.closeWindow"
  },

  // Disable the "switch window" dialog that shows up when the Vim plugin doesn't intercept
  {
    "key": "ctrl+w",
    "command": "-workbench.action.switchWindow"
  },

  // Open a file from the Explorer
  {
    "key": "o",
    "command": "list.select",
    "when": "explorerViewletVisible && filesExplorerFocus && !explorerResourceIsFolder && !inputFocus"
  },

  // Quick-select and navigate sidebar/editor. Cmd+Shift+<key> will focus a panel/editor/terminal. "Focusing" a view
  // while it is already focused will toggle the sidebar.
  //
  // J -> Editor
  // E -> Explorer
  // F -> Search
  // Z -> Terminal
  {
    "win": "ctrl+shift+j",
    "key": "cmd+shift+j",
    "command": "-workbench.action.search.toggleQueryDetails",
    "when": "searchViewletVisible"
  },
  {
    "win": "ctrl+shift+j",
    "key": "cmd+shift+j",
    "command": "workbench.action.focusActiveEditorGroup"
  },
  {
    "win": "ctrl+shift+z",
    "key": "cmd+shift+z",
    "command": "workbench.action.terminal.toggleTerminal"
  }
]
