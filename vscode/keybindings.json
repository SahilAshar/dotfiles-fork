[
  //// *** Configuring built-in behavior *** ////

  // Use visual next tab instead of MRU
  {
    "key": "shift+cmd+]",
    "command": "-workbench.action.nextEditor"
  },
  {
    "key": "shift+cmd+[",
    "command": "-workbench.action.previousEditor"
  },
  {
    "key": "ctrl+tab",
    "command": "-workbench.action.openNextRecentlyUsedEditorInGroup"
  },
  {
    "key": "ctrl+tab",
    "command": "workbench.action.nextEditorInGroup"
  },
  {
    "key": "ctrl+shift+tab",
    "command": "workbench.action.previousEditorInGroup"
  },

  // Disable closing the VSCode window when no editors are visible
  {
    "key": "cmd+w",
    "command": "-workbench.action.closeWindow"
  },
  {
    "key": "ctrl+w",
    "command": "-workbench.action.switchWindow"
  },

  // Make the sidebar navigable with NERDTree-style keys, e.g. `jk`, `C+[np]`, `[C-]o`.
  // Relies on the Vim plugin and the workbench.list.automaticKeyboardNavigation setting in settings.json.
  {
    "key": "ctrl+o",
    "command": "list.toggleExpand",
    "when": "listFocus && !inputFocus"
  },
  {
    "key": "o",
    "command": "filesExplorer.openFilePreserveFocus",
    "when": "explorerViewletVisible && filesExplorerFocus && !explorerResourceIsFolder && !inputFocus"
  },
  {
    "key": "ctrl+o",
    "command": "filesExplorer.openFilePreserveFocus",
    "when": "explorerViewletVisible && filesExplorerFocus && !explorerResourceIsFolder && !inputFocus"
  },

  //// *** Adding new functionality *** ////

  // Quick-select and navigate sidebar/editor. Cmd+Shift+<key> will focus a panel/editor/terminal. "Focusing" a view
  // while it is already focused will toggle the sidebar.
  //
  // J -> Editor
  // E -> Explorer
  // F -> Search
  // Z -> Terminal
  {
    "win": "ctrl+shift+j",
    "mac": "cmd+shift+j",
    "command": "-workbench.action.search.toggleQueryDetails",
    "when": "searchViewletVisible"
  },
  {
    "win": "ctrl+shift+j",
    "mac": "cmd+shift+j",
    "command": "workbench.action.focusActiveEditorGroup"
  },
  {
    "win": "ctrl+shift+z",
    "mac": "cmd+shift+z",
    "command": "workbench.action.terminal.toggleTerminal"
  },
  {
    "win": "ctrl+shift+e",
    "mac": "cmd+shift+e",
    "command": "workbench.action.toggleSidebarVisibility",
    "when": "explorerViewletFocus"
  },
  {
    "win": "ctrl+shift+f",
    "mac": "cmd+shift+f",
    "command": "workbench.action.toggleSidebarVisibility",
    "when": "searchViewletFocus"
  },
]
