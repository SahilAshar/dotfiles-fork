#!/usr/bin/env zsh

ln -fs $DOTFILES/git/gitconfig ~/.gitconfig
ln -fs $DOTFILES/git/gitignore ~/.gitignore

ln -fs $DOTFILES/vim/vimrc ~/.vimrc
ln -fs $DOTFILES/vim/xvimrc ~/.xvimrc

mkdir ~/.vim
mkdir ~/.config
ln -Fs ~/.vim ~/.config/nvim
ln -Fs ~/.vimrc ~/.config/nvim/init.vim
ln -Fs $DOTFILES/vim/plugins/coc.json ~/.config/nvim/coc-settings.json

ln -fs $DOTFILES/tmux/tmux.conf ~/.tmux.conf

ln -fs $DOTFILES/zsh/zshrc ~/.zshrc

mkdir -p ~/.config/alacritty
ln -fs $DOTFILES/alacritty/alacritty.yml ~/.config/alacritty/alacritty.yml
